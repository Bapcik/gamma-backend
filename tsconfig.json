{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "pretty": true,
    "rootDir": "./",
    "outDir": "dist",
    "baseUrl": ".",                           /* Base directory to resolve non-absolute module names. */
    "sourceMap": true,
    "importHelpers": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true
  },
  "files": ["./src/@types/requestLocals.d.ts"],
  "include": ["src/*.ts", "src/*.d.ts"],
  "exclude": ["node_modules"]
}
